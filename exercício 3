  questão 5
  
  #include <stdio.h>

int main () {
	char x [30], z [30];
	int a = 0, b = 0;
	
	printf ("Digite um texto:");
	scanf ("% [^ \ n] s", x);
	getchar ();
	printf ("Digite um texto para concatenalo:");
	scanf ("% [^ \ n] s", z);
	
	para (; x [a]! = '\ 0'; a ++) {}

	para (; z [b]! = '\ 0'; b ++) {
		x [a] = z [b];
		a ++;
	}
	
	x [a] = '\ 0';
	printf ("% s", x);
	
	retornar 0;
	
	scanf ("% [^ \ n] s", x);
	
	while (x [a]! = '\ 0') {
		z [a] = x [a];
		a ++;
	}
	
	z [a] = '\ 0';
	printf ("% s", z);
	
	retornar 0;
